<div>
    <h1>Add a new post</h1>
    <% fdorm_with model:@post, url: user_posts_path, class: "form" do |f| %>
        <%= f.label :title %><br>
        <%= f.text_field :title %><br>
        <%= f.label :text %><br>
        <%= f.text_area :text, cols: 30, rows: 10 %><br>
        <%= f.submit "Submit", class: "form_btn" %>
    <% end >
</div>