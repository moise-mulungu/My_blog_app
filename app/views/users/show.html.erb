<%= stylesheet_link_tag "application"%>

<div class="show_container">
  <div class="head">
    <img src="<%=@user.photo%>" alt="Userimage">
    <div class="user_details">
      <h3><%= @user.name %></h3>
      <p>Number of post: <%=@user.post_counter%>
    </div>
    <%= link_to "Add a post", new_user_post_path(@user) %>
  </div>

  <div class="userBio">
    <h3>Bio</h3>
    <p><%=@user.bio%></p>
  </div>
</div>

<%=@user.recent_posts.each do |post|%>
  <%= link_to user_posts_path(@user) do %>
    <div class="user_post">
      <h3>Post <%=post.id%></h3>
      <p><%=post.text%></p>

      <div class="likes_comments">
        <p>Comments: <%=post.comment_counter%></p>
        <p>Likes: <%=post.likes_counter%></p>
      </div>
    </div>
  <% end %>
<%end%>

<%= link_to "See all posts", user_posts_path(user_id: @user.id) %>